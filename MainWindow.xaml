<Window x:Class="YuristNodepad.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:YuristNodepad"
        mc:Ignorable="d"
        Title="MainWindow" Height="auto" Width="auto">
    <Grid>
        <DockPanel Grid.ColumnSpan="2" Margin="0,0,-0.4,-0.4" >
            <Menu DockPanel.Dock="Top" Height="40">
            
            </Menu>
            <RichTextBox DockPanel.Dock="Bottom" >
                <FlowDocument>
                    <Paragraph >
                        <Run Text="{Binding RichFullText}" />
                    </Paragraph>
                </FlowDocument>
            </RichTextBox>
            <StatusBar DockPanel.Dock="Bottom" />
        </DockPanel>
    </Grid>
</Window>
